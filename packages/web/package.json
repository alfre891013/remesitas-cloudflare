{
  "name": "@remesitas/web",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "pnpm build && wrangler pages deploy .svelte-kit/cloudflare --project-name=remesitas",
