{
  "name": "remesitas-cloudflare",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "db:generate": "pnpm --filter api db:generate",
    "db:migrate": "pnpm --filter api db:migrate",
    "db:migrate:prod": "pnpm --filter api db:migrate:prod",
    "db:studio": "pnpm --filter api db:studio",
    "deploy:all": "pnpm build && pnpm deploy:api && pnpm deploy:web",
    "deploy:api": "cd packages/api && npx wrangler deploy",
    "deploy:web": "cd packages/web && npm run build && npx wrangler pages deploy .svelte-kit/cloudflare --project-name remesitas-web --branch main --commit-dirty=true",
    "setup:cloudflare": "node scripts/setup-cloudflare.js",
    "wrangler": "wrangler"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0",
    "wrangler": "^3.95.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
